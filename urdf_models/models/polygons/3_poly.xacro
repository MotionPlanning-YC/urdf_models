<robot name="3_poly" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="mesh_file" value="package://urdf_models/models/polygons/3_poly.stl" />
  <xacro:property name="mass" value="0.5" />
  <link name="base_link"></link>

  <joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="base_link_inertia" />
  </joint>
  <link name="base_link_inertia">
      <inertial>
        <mass value="${mass}" />  <!-- [kg] -->
        <origin xyz="-0.004250 -0.001861  0.004301" />
        <inertia ixx="0.00000056" ixy="0.0" 		ixz="0.0"
                			    iyy="0.00000076"  iyz="0.0"
                 								izz="0.00000083" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${mesh_file}" scale="1 1 1" />
        </geometry>
	<material name="blue">
	  <color rgba="0 0 .8 1"/>
	</material>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${mesh_file}" scale="1 1 1" />
        </geometry>
      </collision>
    </link>
    
   <gazebo reference="$base_link_inertia">
        <mu1>1.1</mu1>
        <mu2>1.1</mu2>
   </gazebo>

</robot>
